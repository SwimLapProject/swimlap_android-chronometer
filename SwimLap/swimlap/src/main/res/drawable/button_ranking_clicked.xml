<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <corners
        android:radius="5dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:startColor="@color/bluesea"
        android:centerColor="@color/yellowlight"
        android:endColor="@color/white"
        android:type="linear"
        />
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        />
    <size
        android:width="@dimen/dimen_button_basic_side_size"
        android:height="@dimen/dimen_button_basic_side_size"
        />
</shape>
