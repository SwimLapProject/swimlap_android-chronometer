<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_fragmentmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_simplechronometer"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"
            android:layout_marginLeft="@dimen/dimen_padding_left_button_menu"

            android:background="@drawable/button_menu"

            android:text="Simple chronometer"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_meetings"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"
            android:layout_marginLeft="@dimen/dimen_padding_left_button_menu"

            android:background="@drawable/button_menu"

            android:text="Meetings"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_swimmers"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"
            android:layout_marginLeft="@dimen/dimen_padding_left_button_menu"

            android:background="@drawable/button_menu"

            android:text="Swimmers"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"

            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_settings"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"
            android:layout_marginLeft="@dimen/dimen_padding_left_button_menu"

            android:background="@drawable/button_menu"

            android:text="Settings"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"

            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>