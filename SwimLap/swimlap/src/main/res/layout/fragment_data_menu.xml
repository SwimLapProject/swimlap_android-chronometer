<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_fragmentmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_simplechronometer"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"

            android:background="@drawable/button_clickable"

            android:text="Simple chronometer"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_settings"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"

            android:background="@drawable/button_clickable"

            android:text="Settings"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ProgressBar
            android:id="@+id/id_progress_bar"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_meetings"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"

            android:background="@drawable/button_clickable"

            android:text="Meetings"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_to_swimmers"
            android:layout_width="@dimen/dimen_button_menu_width"
            android:layout_height="@dimen/dimen_button_menu_height"

            android:background="@drawable/button_clickable"

            android:text="Swimmers"
            android:textSize="@dimen/dimen_text_button_menu"
            android:textColor="@color/bluesea"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>


</LinearLayout>