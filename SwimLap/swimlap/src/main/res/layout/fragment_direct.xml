<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_direct"
            android:layout_width="@dimen/abc_action_button_min_width"
            android:layout_height="fill_parent"
            android:text="GO"
            style="@style/allButtons"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        >

        <Chronometer
            android:id="@+id/id_chrono_digit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:autoText="true"
            style="center"
            android:gravity="center_horizontal"
            android:numeric="decimal"
            android:inputType="numberDecimal"
            android:format="%s"
            android:textAlignment="center"
            android:textStyle="bold|normal"
            android:textSize="30dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/id_button_start"
            android:layout_width="@dimen/abc_action_button_min_width"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:text="Start"
            android:background="@color/greenstart"
            android:textColor="@color/white"
            style="@style/allButtons"
            />

        <Button
            android:id="@+id/id_button_stop"
            android:layout_width="@dimen/abc_action_button_min_width"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:text="Stop"
            android:background="@color/redstop"
            android:textColor="@color/white"
            style="@style/allButtons"
            />
    </RelativeLayout>


</LinearLayout>