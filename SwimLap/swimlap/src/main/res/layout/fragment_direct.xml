<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/application_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_direct"
            android:layout_width="@dimen/dimen_button_basic_side_size"
            android:layout_height="@dimen/dimen_button_basic_side_size"
            android:background="@drawable/button_clickable"

            android:layout_margin="@dimen/dimen_margin_around_button"

            android:text="LAP"
            android:textColor="@color/bluesea"
            android:textSize="@dimen/dimen_text_button_basic"
            />

        <Button
            android:id="@+id/id_button_back_to_menu"
            android:layout_width="@dimen/dimen_button_basic_side_size"
            android:layout_height="@dimen/dimen_button_basic_side_size"
            android:background="@drawable/button_clickable"

            android:layout_margin="@dimen/dimen_margin_around_button"
            android:text="MENU"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_button_basic"

            />

    </RelativeLayout>

    <Chronometer
        android:id="@+id/id_chrono_digit"
        style="@style/chronoDirect"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_start"
            android:layout_width="@dimen/dimen_button_basic_side_size"
            android:layout_height="@dimen/dimen_button_basic_side_size"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_margin_around_button"

            android:background="@drawable/button_start_clickable"

            android:text="Start"
            android:textSize="@dimen/dimen_text_button_basic"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/id_button_stop"
            android:layout_width="@dimen/dimen_button_basic_side_size"
            android:layout_height="@dimen/dimen_button_basic_side_size"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_margin_around_button"

            android:background="@drawable/button_stop_clickable"

            android:text="Stop"
            android:textSize="@dimen/dimen_text_button_basic"
            android:textColor="@color/white"
            />
    </RelativeLayout>


</LinearLayout>