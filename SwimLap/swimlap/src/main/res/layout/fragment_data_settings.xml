<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    <!-- CLUB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/dimen_textview_settings_width"
                android:layout_height="fill_parent"
                android:text="Club"
                android:textColor="@color/bluesea"
                android:textSize="@dimen/dimen_settings_font_medium"
                />

            <Button
                android:id="@+id/id_button_modifyclub"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Save"
                android:background="@drawable/button_clickable"

                />

        </LinearLayout>
        <!-- club name -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/dimen_textview_settings_width"
                android:layout_height="fill_parent"
                android:text="Name"
                android:textColor="@color/bluesea"
                android:textSize="@dimen/dimen_settings_font_small"
                />

            <EditText
                android:id="@+id/id_edittext_clubname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
        <!-- id club -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_textview_settings_width"
                android:layout_height="fill_parent"
                android:text="id FFN"
                android:textColor="@color/bluesea"
                android:textSize="@dimen/dimen_settings_font_small"
                android:id="@+id/id_textview_clubidffn"
                />

            <EditText
                android:id="@+id/id_edittext_club_codeffn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>

        <!-- ************************************** -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:background="@drawable/application_background"/>
        <!-- ************************************** -->
        <!-- MENTIONS LEGALES -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mentions LÃ©gales"
            android:textColor="@color/bluesea"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mentions_legales"
            android:textColor="@color/bluesea"
            android:textSize="@dimen/dimen_settings_font_mention_legales"
            android:id="@+id/id_textview_clubidffn"
            android:layout_gravity="left|right"
            />
    </LinearLayout>

</ScrollView>
