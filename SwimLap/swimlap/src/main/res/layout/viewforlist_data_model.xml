<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="70dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_textview_list_model_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="@dimen/dimen_text_list_name"
            android:textColor="@color/bluesea"

            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_textview_list_model_second"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:text="FIRST"
                android:textSize="@dimen/dimen_text_list_second"
                android:textColor="@color/bluesea"

                />

            <TextView
                android:id="@+id/id_textview_list_model_third"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="YEAR"
                android:textSize="@dimen/dimen_text_list_third"
                android:textColor="@color/bluesea"

                />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/id_button_link"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_button_little_side_size"
        android:layout_weight="1"
        android:text="Ranking"
        android:background="@drawable/button_ranking"
        android:textColor="@color/bluesea"
        android:focusable="false"/>

</LinearLayout>